.container-fluid
  .row-fluid
    .span8.offset2
      %table.table.table-bordered
        %thead
          %tr
            %td
              Логин
            %td
              e-mail
            %td
              Фамилия
            %td
              Имя 
            %td
              Отчество
            %td
              Дата рождения 
        %tbody
          - @users.each do |user|
            %tr
              %td
                = user.login
              %td
                = user.email
              %td
                = user.surname
              %td
                = user.name
              %td
                = user.middlename
              %td
                = user.date_of_birth

      = will_paginate @collection, renderer: BootstrapPagination::Rails

